<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <!--<item name="searchViewSearchIcon">@mimap/search</item>-->
        <!--<item name="searchViewSearchIcon">@m</item>-->
    </style>

    <style name="expandGroupTextStyle">
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="expandChildTextStyle">
        <item name="android:textSize">@dimen/sp17</item>
    </style>
    <style name="hintColorText">
        <item name="android:textColor">@color/blackHintColor</item>
    </style>

    <style name="navigationTitleTextStyle">
        <item name="android:textSize">@dimen/sp25</item>
        <item name="android:textColor">@color/whiteTextColor</item>
    </style>

    <style name="navigationSubTitleTextStyle">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/whiteHintColor</item>
    </style>

    <style name="RvItemTitleStyle">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RvItemSubStyle">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/blackHintColor</item>
    </style>
    <!--button-->
    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/whiteTextColor</item>

    </style>

    <style name="setting_item_title">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>

    <style name="setting_item_subtitle">
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColor">@color/blackHintColor</item>
    </style>


    <style name="about_item_title">
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>

    <style name="about_item_content">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/blackHintColor</item>
    </style>


    <!-- 弹出框动画 由下至上 -->
    <style name="dialogStyle" >
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>

        <!-- 退出时的动画 -->
    </style>


    <style name="cancelBtnStyle" >
        <item name="android:textColor">@color/blue</item>
    </style>
    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>


</resources>
